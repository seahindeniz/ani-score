{
  "name": "ani-score",
  "displayName": "AniScore",
  "type": "module",
  "version": "0.0.8",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "description": "Instantly see anime ratings from AniList on your favorite streaming sites",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "pnpm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "pnpm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "tsx scripts/prepare.ts",
    "dev:background": "pnpm run build:background --mode development",
    "dev:web": "vite",
    "dev:js": "pnpm run build:js --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "tsx scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:js": "tsx vite.config.content.mts",
    "pack": "run-s build && cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension/release/extension.zip && jszip-cli add extension/* -o ./extension/release/extension.zip",
    "pack:crx": "crx pack extension -p ./extension/release/extension.pem -o ./extension/release/extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./extension/release/ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension/release/extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.11",
    "@nozbe/microfuzz": "1.0.0",
    "@solid-primitives/scheduled": "1.5.2",
    "@solidjs/router": "0.15.3",
    "@urql/core": "6.0.1",
    "minimatch": "10.0.3",
    "minisearch": "7.2.0",
    "solid-js": "^1.9.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@ffflorian/jszip-cli": "^3.8.5",
    "@graphql-codegen/cli": "6.0.0",
    "@graphql-codegen/client-preset": "5.0.2",
    "@iconify-json/streamline-freehand": "1.2.1",
    "@iconify-json/streamline-freehand-color": "1.2.2",
    "@iconify/json": "^2.2.239",
    "@playwright/test": "^1.46.1",
    "@solid-primitives/storage": "^4.3.3",
    "@solidjs/testing-library": "^0.8.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.6.2",
    "@types/webextension-polyfill": "^0.12.0",
    "@types/yargs-parser": "21.0.3",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@unocss/eslint-plugin": "^66.5.2",
    "@unocss/reset": "^66.5.2",
    "chokidar": "^4.0.3",
    "chrome-types": "0.1.380",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cross-env": "^10.1.0",
    "crx": "^5.0.1",
    "eslint": "^9.35.0",
    "eslint-plugin-solid": "^0.14.5",
    "fast-glob": "3.3.3",
    "fs-extra": "^11.2.0",
    "graphql": "16.11.0",
    "jsdom": "^27.0.0",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "release-it": "19.0.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tailwind-merge": "3.3.1",
    "type-fest": "5.0.1",
    "typescript": "^5.9.2",
    "typescript-plugin-css-modules": "5.2.0",
    "unocss": "^66.5.2",
    "unocss-preset-animations": "1.2.1",
    "unocss-preset-primitives": "0.0.2-beta.2",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-icons": "^22.4.2",
    "vite": "^7.1.9",
    "vite-plugin-solid": "^2.1.8",
    "vitest": "^3.0.0",
    "web-ext": "^8.9.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0",
    "yargs-parser": "22.0.0"
  }
}
