{
  "name": "ani-score",
  "displayName": "AniScore",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.7.1",
  "description": "A browser extension to get anime scores from Anilist to your favorite websites.",
  "scripts": {
    "dev": "pnpm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "pnpm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "pnpm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "pnpm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "solid-js": "^1.9.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@ffflorian/jszip-cli": "^3.8.5",
    "@iconify/json": "^2.2.239",
    "@playwright/test": "^1.46.1",
    "@solid-primitives/storage": "^1.3.11",
    "@solidjs/testing-library": "^0.8.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.0",
    "@types/webextension-polyfill": "^0.12.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@unocss/reset": "^0.62.2",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^9.35.0",
    "esno": "^4.7.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^25.0.1",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "unocss": "^0.62.2",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-icons": "^0.19.2",
    "vite": "^5.4.2",
    "vite-plugin-solid": "^2.1.8",
    "vitest": "^3.0.0",
    "web-ext": "^8.9.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  }
}
