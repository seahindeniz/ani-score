{
  "name": "ani-score-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "pnpm -r dev",
    "dev-firefox": "pnpm -r dev-firefox",
    "dev:site": "pnpm --filter @ani-score/site dev",
    "build": "pnpm -r build",
    "build-firefox": "pnpm -r build-firefox",
    "build:site": "pnpm --filter @ani-score/site build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "release": "pnpm -r release"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "lefthook": "2.0.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  }
}
